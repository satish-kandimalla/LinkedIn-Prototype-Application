<!DOCTYPE html>
<html>
<head>
	 <title>LinkedIn</title>
	 <meta charset="utf-8"/>
	 <meta name="viewport" content="width=device-width, initial-scale=1"/>
	 <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"/>
	 <link rel='stylesheet' href='/stylesheets/style.css' />
	 <script src= "http://ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular.min.js"></script>
	 <!-- latest jQuery, Boostrap JS and hover dropdown plugin -->
	 <script src="//code.jquery.com/jquery-latest.min.js"></script>
	 <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
	 <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular-route.min.js"></script> 
</head>

<body ng-app="app">
	<div class="container-fluid navbar-fixed-top">
	<!-- Top bar with grey background -->
	   <div class="topbar">
	  	<div class="container">
		  	<form class="form-horizontal">
		    	<div class="input-append">
		    		<img src="images/linkedin.png" alt="LinkedIn" height="35" width="35"/>
		    		<searchbar>
			    		<input class="resizedTextBox" type="text" id="search" ng-model="searchValue" placeholder = "Search"/>
				     	<button type="button" ng-click = "search()" class="btn btn-info">
					  		<span class="glyphicon glyphicon-search" aria-hidden="true"></span>	
						</button>
		    		</searchbar>
		    		<ul class="cssMenu pull-right">
				        <li>
				            <a href="#Message"><img src="images/email.png" alt="LinkedInEmail" height="25" width="25"/></a>
				            <ul>
				                <li><a href="#">item1</a></li>
				                <li><a href="#">item2</a></li>
				                <li><a href="#">item3</a></li>
				            </ul>
				        </li>
				        <li>
				            <a href="#"><img src="images/notification.png" alt="LinkedInNotification" height="25" width="25"/></a>
				            <ul>
				                <li><a href="#">item1</a></li>
				                <li><a href="#">item2</a></li>
				                <li><a href="#">item3</a></li>
				            </ul>
				        </li>
				        <li>
				            <a href="#addConnection"><img src="images/user.png" alt="LinkedInUser" height="25" width="25"/></a>           
				            <ul>
				                <li><a href="#">item1</a></li>
				                <li><a href="#">item2</a></li>
				                <li><a href="#">item3</a></li>
				            </ul>
				        </li>
				        <li>
				            <a href="#"><img src="images/user.png" alt="LinkedInUser" height="25" width="25"/></a>           
				            <ul>
				                <li><a href="#" ng-click="signOut()">Logout</a></li>
				            </ul>
				        </li>
				        
				    </ul>
				</div>
			</form>
		</div>
	  </div>
	 
	  <div class="menubar">
	  	<div class="container">
		  	<div class="btn-toolbar">
		        <div class="btn-group">
		          <button class="btn btn-link dropdown-toggle">Home</button>
		        </div>
		        <div class="btn-group">
		          <button class="btn btn-link dropdown-toggle" data-toggle="dropdown" data-hover="dropdown">Profile<span class="caret"></span></button>
		          <ul class="dropdown-menu">
		            <li><a href="#">Edit Profile</a></li>
		            <li><a href="#">Who's viewed your profile</a></li>
		            <li><a href="#">Your Updates</a></li>
		          </ul>
		        </div>
		        <div class="btn-group">
		          <button class="btn btn-link dropdown-toggle" data-toggle="dropdown" data-hover="dropdown">Connections<span class="caret"></span></button>
		          <ul class="dropdown-menu">
		            <li><a href="#">Keep in touch</a></li>
		            <li><a href="addConnections" ng-model = "clicked">Add connections</a></li>
		          </ul>
		        </div>
		        <div class="btn-group">
		          <button class="btn btn-link">Education</button>
		        </div>	        
		    </div>
		 </div>
	  </div>
	 
<div class = "profile-page" style = "height: 250px">
	<img src="images/four.png" alt="LinkedInUser" class="col-md-3" style = "margin-top:20px" height="180" width="180"/>
	
	<%
	if(session.guestprofile!==undefined)
	{
	var first_name = session.guestprofile[0].first_name;
	var last_name  = session.guestprofile[0].last_name;
	%>
    <h2 class="col-md-5"><%=first_name%> <%=last_name%></h2>
    <%
    }
    %>
</div>

<div class = "profile-page" style = "margin-top:20px;height: 250px">
      <div>
	      <h3>Summary</h3>
      </div>
      <div>
    	    <%
			if(session.guestprofile!==undefined)
			{
			var sum=session.guestprofile[0].summary;
			%>
			<textarea class="form-control" rows="5" id="summaryArea" disabled>
			<%=sum%>
			</textarea>
			<%
			}
			%>
      </div><br></br>   
</div>
<div class = "profile-page" style = "margin-top:20px">
	<div>
		<h3>Experience</h3>
	</div>
	<%
	if(session.guestprofile!==undefined)
	{
	var company_name=session.guestprofile[0].company_name;
	var title=session.guestprofile[0].title;
	var location=session.guestprofile[0].location;
	var exp_start_date=session.guestprofile[0].exp_start_date;
	var exp_end_date=session.guestprofile[0].exp_end_date;
	var exp_description=session.guestprofile[0].exp_description;
	%>
	<div class="row">
		<label class="col-md-3">Company Name*</label>
		<input class="col-md-5" type="text" disabled>
		<%=company_name%>
		</input>
    </div><br></br>	
	<div class="row">
		<label class="col-md-3">Title*</label>
		<input class="col-md-5" type="text" disabled>
		<%=title%>
		</input>
	</div><br></br>	
	<div class="row">
		<label class="col-md-3">Location</label>
		<input class="col-md-5" type="text" disabled>
		<%=location%>
		</input>
	</div><br></br>
	<div class="row">
		<label class="col-md-3">Time Period*</label>
		<input class="col-md-2" type="date" disabled>
		<%=exp_start_date%>
		</input>
		<p2 class="col-xs-1">-</p2>
		<input class="col-md-2" type="date" disabled>
		<%=exp_end_date%>
		</input>
	</div><br></br>
	<div class="row">
		<label class="col-md-3">Description</label>
		<textarea class="col-md-5" rows="5" id="jobDescription" disabled>
		<%=exp_description%>
		</textarea>
	</div><br></br>
	<%
	}
	%>
</div>
<div class = "profile-page" style = "margin-top:20px">
<form>
	<div>
		<h3>Education</h3>
	</div>
	<%
	if(session.guestprofile!==undefined)
	{
	var level=session.guestprofile[0].level;
	var univ_name=session.guestprofile[0].univ_name;
	var field=session.guestprofile[0].field;
	var grade=session.guestprofile[0].grade;
	var edu_start_date=session.guestprofile[0].edu_start_date;
	var edu_end_date=session.guestprofile[0].edu_end_date;
	var edu_description=session.guestprofile[0].edu_description;
	%>
	<div class="row">
		<label class="col-md-2">School*</label>
		<input class="col-md-5" type="text" disabled>
		<%=univ_name%>
		</input>
    </div><br></br>	
    <div class="row">
		<label class="col-md-2">Degree</label>
		<input class="col-md-5" type="text" disabled>
		<%=level%>
		</input>
    </div><br></br>	
	<div class="row">
		<label class="col-md-2">Start Date</label>
		<input class="col-md-2" type="date" disabled>
		<%=edu_start_date%>
		</input>
		<label class="col-md-2">End Date</label>
		<input class="col-md-2" type="date" disabled>
		<%=edu_end_date%>
		</input>
	</div><br></br>	
	<div class="row">
		<label class="col-md-2">Field of Study</label>
		<input class="col-md-5" type="text" disabled>
		<%=field%>
		</input>
	</div><br></br>
	<div class="row">
		<label class="col-md-2">Grade</label>
		<input class="col-md-5" type="text" disabled>
		<%=grade%>
		</input>
	</div><br></br>
	<div class="row">
		<label class="col-md-2">Description</label>
		<textarea class="col-md-5" rows="5" id="edesc" disabled>
		<%=edu_description%>
		</textarea>
	</div><br></br>
	<%
	}
	%>
</form>  
</div>
</body>
</html>